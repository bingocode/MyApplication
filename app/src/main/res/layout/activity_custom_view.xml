<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.fisrtdemo.CustomViewActivity">
<com.example.admin.fisrtdemo.view.CircleView
    android:id="@+id/customview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#999999"
    android:padding="15dp"
    android:layout_margin="15dp"
    app:custom_color="#FF0000"
    app:custom_radius = "100dp"
    />

    <com.example.admin.fisrtdemo.view.ScrollerLinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/customview"
        >
        <Button
            android:id="@+id/startscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"/>
    </com.example.admin.fisrtdemo.view.ScrollerLinearLayout>
</RelativeLayout>
